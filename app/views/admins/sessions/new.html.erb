<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
    <h2 class="form-signin-heading">登录</h2>
    <%= f.text_field :name, class: 'input-block-level', placeholder: '用户名', autofocus: true, required: true %>
    <%= f.password_field :password, class: 'input-block-level', placeholder: '密码', required: true %>
    <label class="checkbox">
      <%= f.check_box :remember_me, as: :boolean %>两周免登录
    </label>
    <button class="btn btn-large btn-primary" type="submit">登录</button>
<% end %>